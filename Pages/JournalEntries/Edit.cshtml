@page "{id:int?}"
@model MyScriptureJournal.Pages.JournalEntries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Journal Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JournalEntry.ID" />
            <div class="form-group">
                <label asp-for="JournalEntry.BookName" class="control-label"></label>
                <input asp-for="JournalEntry.BookName" class="form-control" />
                <span asp-validation-for="JournalEntry.BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.DateAdded" class="control-label"></label>
                <input asp-for="JournalEntry.DateAdded" class="form-control" />
                <span asp-validation-for="JournalEntry.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Chapter" class="control-label"></label>
                <input asp-for="JournalEntry.Chapter" class="form-control" />
                <span asp-validation-for="JournalEntry.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Verse" class="control-label"></label>
                <input asp-for="JournalEntry.Verse" class="form-control" />
                <span asp-validation-for="JournalEntry.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Notes" class="control-label"></label>
                <input asp-for="JournalEntry.Notes" class="form-control" />
                <span asp-validation-for="JournalEntry.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
